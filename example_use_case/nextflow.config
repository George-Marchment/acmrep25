executor ="local"

apptainer {
    enabled = true
    cacheDir = 'apptainer'
    runOptions = '--home $HOME:/home/$USER --bind /home'
}

process {
    withLabel: python2 {
        container='python:2.7.9'
    }

    withLabel: python3 {
        container='marchment/python'
    }

    withLabel: R {
        container='r-base:4.5.1'
    }

    
}
